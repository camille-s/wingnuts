{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "gancio",
      "image": "gancio:v2.0.0-alpha.1",
      "environment": [
        { "key": "USER_GID", "value": "1001" },
        { "key": "USER_UID", "value": "1001" },
        { "key": "PATH", "value": "$PATH:/home/node/.yarn/bin" },
        { "key": "GANCIO_DATA", "value": "/home/node/data" },
        { "key": "NODE_ENV", "value": "production" },
        { "key": "GANCIO_DB_DIALECT", "value": "sqlite" },
        { "key": "GANCIO_DB_STORAGE", "value": "${APP_DATA_DIR}/gancio.sqlite" }
      ],
      "internalPort": 13120,
      "addPorts": [
        {
            "containerPort": 13120,
            "hostPort": 13120,
            "tcp": true,
            "udp": false
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/home/node/data",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "/etc/timezone",
          "containerPath": "/etc/timezone",
          "readOnly": true,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}