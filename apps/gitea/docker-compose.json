{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "gitea",
      "image": "docker.gitea.com/gitea:1.24.2",
      "environment": [
        { "key": "USER_UID", "value": "1000" },
        { "key": "USER_GID", "value": "1000" }
      ],
      "internalPort": 3000,
      "addPorts": [
        {
          "containerPort": 22,
          "hostPort": 223,
          "tcp": true,
          "udp": false
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "/etc/timezone",
          "containerPath": "/etc/timezone",
          "readOnly": true,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true,
          "shared": false,
          "private": false
        }
      ],
      "isMain": true
    }
  ]
}
